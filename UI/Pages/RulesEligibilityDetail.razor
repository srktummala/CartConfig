@page "/ruleseligibilitydetail/{RulesEligibilityId}"

<h1 class="page-title">Rules Eligibility Details</h1>

<div class="col-12 row">    
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">RulesEligibility ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@RulesEligibility.RulesEligibilityID</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Farm Bill</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@FarmBill.Name</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Program</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Programs.Name</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Program Component</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@ProgramComponent.Name</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Contract</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contract.Name</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Jurisdiction</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Jurisdiction.Name</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsEnrollmentType</label>
                <div class="col-sm-8">
                    @if (RulesEligibility.IsEnrollmentType)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsDuration</label>
                <div class="col-sm-8">
                    @if (RulesEligibility.IsDuration)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsEasementType</label>
                <div class="col-sm-8">
                    @if (RulesEligibility.IsEasementType)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsPaymentRateSource</label>
                <div class="col-sm-8">
                    @if (@RulesEligibility.IsPaymentRateSource)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsPracticeSchedule</label>
                <div class="col-sm-8">
                    @if (@RulesEligibility.IsPracticeSchedule)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsCARTAssessmentRequired</label>
                <div class="col-sm-8">
                    @if (@RulesEligibility.IsCARTAssessmentRequired)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsCARTRankingRequired</label>
                <div class="col-sm-8">
                    @if (@RulesEligibility.IsCARTRankingRequired)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">IsApplicationRequired</label>
                <div class="col-sm-8">
                    @if (@RulesEligibility.IsApplicationRequired)
                    {
                        <label type="text" readonly class="form-control-plaintext">Yes</label>
                    }
                    else
                    {
                        <label type="text" readonly class="form-control-plaintext">No</label>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

